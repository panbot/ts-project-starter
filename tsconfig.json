{
    "compilerOptions": {
        "lib": ["ES2020"],
        "module": "commonjs",
        "target": "ES2020",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "rootDir": "./src",
        "outDir": "dist",
        "declaration": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules/",
        "./dist/"
    ]
}
